<!DOCTYPE html>
<html lang="en">

  <head>
    <title>Nationalistic Tagging</title>
    <%- include('_partial/_head') -%>
      <link rel="stylesheet" type="text/css" href="tagNationalistic.css" />
      <script src="tagNationalistic.js"></script>
  </head>
  
  <header>
    <%- include('_partial/_header') -%>
  </header>
  
  <body style = "text-align: center;">
    <div class="panel">
      <div class="iframe">
        <iframe id="iframe" class="iframe"></iframe>
      </div>
  
      <!-- <blockquote class="tiktok-embed" data-video-id="6991131155013668102"> <section> </section> </blockquote> 
    <script async src="https://www.tiktok.com/embed.js"></script> -->
  
      <div class="tag-panel" style="position: absolute; left: 32%; top: 20%;">
        <h1 id="headline"> <span style="color: #EE1D52;"> Tag </span> the video</h1>
        <div class="buttons-top" >
          <button id="sec" class="btn-off" onclick="tag(0)" >NOT NATIONALISTIC</button>
          &nbsp;
          <button id="rel" class="btn-off" onclick="tag(1)">NATIONALISTIC</button>
        </div>
        <div class="features">
          <form id='feature' name='features'>
            <% for(let feature of featuresList) { %>
              <input type="checkbox" id='<%= feature %>' name='<%= feature %>'>
              <label for='<%= feature %>'>
                <%= feature %>
              </label>
              <br>
              <% } %>
          </form> 
        </div>
        <div class="buttons-bottom">
          <button id="submit" class="submitButton" onclick="submitTag()" style="margin-bottom: 2%;">Submit</button> </br>
          <% if(currentUser.Permissions == 0) { %>
            <button id="expert" data-toggle="modal" data-target="#passToExpertModal" onclick="exprtFunc()">Pass To Expert</button>
          <% } %> 
          <button id="refresh" onclick="refresh()">Refresh Page</button>
          <button id="error" onclick="markError()">Error</button>
        </div>
        <% if(currentUser.Permissions == 1) { %>
        <div class="expert-message" id="expert-message">
          <h3>Message passed:</h3>
          <p> </p>
        </div>
        <% } %> 
      </div>
    </div>
  
    <!-- Modal -->
    <% if(currentUser.Permissions == 0) { %>
      <div class="modal fade" id="passToExpertModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
      aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div id="passToExprert" class="modal-content">
         <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">insert a message to send to expert</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button> 
          </div>
          <div class="modal-body">
            <textarea class="form-control" id="message"></textarea>
          </div>
          <div class="modal-footer">
            <button type="button" id="close" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="button" id="send" class="btn btn-primary" onclick="passToExpert()">Send</button>
          </div>
        </div>
      </div>
    </div>
    <% } %> 
  
  
  </body>
</html>